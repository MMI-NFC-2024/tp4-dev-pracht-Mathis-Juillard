---
import Layout from "../layouts/Layout.astro";
---
<Layout title="TP4 — Simple (ESM via npm)">
  <h2 style="margin:0 0 .75rem">Plot — ESM via npm</h2>
  <div id="myplot"></div>

  <script>
    import * as Plot from "@observablehq/plot";

    const fig = Plot
      .rectY({ length: 10000 }, Plot.binX({ y: "count" }, { x: Math.random }))
      .plot();                 // ← idem

    document.querySelector("#myplot").append(fig);
  </script>
</Layout>
