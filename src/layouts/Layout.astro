---
import "../styles/global.css";
const { title = "TP4 – Graphiques côté client" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
  </head>
  <body style="margin:0;font-family:system-ui,Segoe UI,Roboto,sans-serif;background:#0b1220;color:#e6edf3;">
    <header style="position:sticky;top:0;z-index:10;background:#0f172a;border-bottom:1px solid #1f2a44;">
      <nav style="max-width:1100px;margin:auto;padding:0.75rem 1rem;display:flex;gap:.75rem;flex-wrap:wrap;">
        <a href="/" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Accueil</a>
        <a href="/simple" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Simple (barres)</a>
        <a href="/penguin" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Penguins (scatter)</a>
        <a href="/penguin-filter" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Penguins + filtre</a>
        <a href="/penguin-multi" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Penguins + filtres (3)</a>
        <a href="/olympians-scatter" style="padding:.4rem .7rem;border:1px solid #334155;border-radius:.5rem;text-decoration:none;color:#e6edf3;">Olympians (scatter)</a>
      </nav>
    </header>

    <main style="max-width:1100px;margin:2rem auto;padding:0 1rem;">
      <slot />
    </main>
  </body>
</html>
