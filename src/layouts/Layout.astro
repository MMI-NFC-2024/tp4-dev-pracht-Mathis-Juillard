---
import "../styles/global.css";
const { title = "TP4 — Data Viz (Plot + Astro)" } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="m-0 bg-slate-950 text-slate-100">
    <header class="sticky top-0 z-10 bg-slate-950/80 backdrop-blur border-b border-slate-800">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex flex-wrap items-center gap-2">
        <a href="/" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Accueil</a>

        <span class="mx-2 text-slate-500">•</span>
        <span class="text-slate-400 mr-1">Penguins :</span>
        <a href="/penguin" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Scatter</a>
        <a href="/penguin-filter" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Filtre espèce</a>
        <a href="/penguin-multi" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Filtres (3)</a>

        <span class="mx-2 text-slate-500">•</span>
        <span class="text-slate-400 mr-1">Olympians :</span>
        <a href="/olympians-scatter" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Scatter</a>
        <a href="/olympians-filtre-sport" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Filtre sport</a>
        <a href="/olympians-filtres" class="px-3 py-1 rounded-full border border-slate-700 hover:bg-slate-800">Filtres (4)</a>
      </nav>
    </header>

    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-slate-800 py-6 text-center text-sm text-slate-400">
      TP4 — Observable Plot + Astro
    </footer>
  </body>
</html>
